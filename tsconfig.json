{
    "compilerOptions": {
        "outDir"                           : "./dist",
        "baseUrl"                          : ".",
        "paths": {
            "@utils/*"                     : ["./src/utils/*"],
        },
        "target"                           : "ES2021",
        "module"                           : "commonjs",
        "esModuleInterop"                  : true,
        "forceConsistentCasingInFileNames" : false,
        "emitDecoratorMetadata"            : true,
        "experimentalDecorators"           : true,
        "resolveJsonModule"                : true,
        "allowJs"                          : true,
        "skipLibCheck"                     : true,
    }
}